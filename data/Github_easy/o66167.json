{
    "title": "Simple Interpolated Publisher",
    "required": [
        "publisher_type",
        "publish"
    ],
    "additionalProperties": false,
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "publisher_type": {
            "enum": [
                "interpolated-pub"
            ],
            "type": "string"
        },
        "glob": {
            "default": false,
            "type": "boolean"
        },
        "relative_paths": {
            "default": false,
            "type": "boolean"
        },
        "publish": {
            "type": "object"
        }
    }
}